  pod 'Reusable', '~> 4.0'
  pod 'SDWebImage', '~> 3.8'
  pod 'PopupDialog', '~> 0.6'

  target 'RoadDoggTests' do
    inherit! :search_paths
    # Pods for testing
  end

  target 'RoadDoggUITests' do
    inherit! :search_paths
    # Pods for testing
  end

