  pod 'DateTimePicker'
  pod 'SearchTextField'
  pod 'RealmSwift'
  pod 'FacebookCore'
  pod 'Onboard'         #Onboarding Pages
  pod "ILLoginKit"      #Login And Sign Up Pages
  pod 'Stripe'          #Stripe SDK to handle payents
  pod 'Firebase/Core'
  pod 'Firebase/Messaging'
